<mvc:View
    controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <m:Page
        id="page"
        title="Reports Dashboard"
        enableScrolling="true"
        showHeader="false"
    >
        <m:content>
            <!-- ðŸ”¹ Filter Bar -->
            <m:HBox
                id="filterBar"
                class="sapUiSmallMarginTop"
                alignItems="Center"
                justifyContent="SpaceBetween"
            >
                <l:VerticalLayout
                    class="sapUiContentPadding"
                    width="100%"
                >
                    <m:MultiInput
    id="productInput"
    placeholder="Enter product"
    showSuggestion="false"   
    suggestionItems="{/ProductCollection}"
    showClearIcon="true"
    valueHelpRequest=".onProductInputClick"
>
    <m:suggestionItems>
        <core:Item text="{Name}" />
    </m:suggestionItems>
</m:MultiInput>

                </l:VerticalLayout>

                <m:HBox alignItems="Center">
                    <m:Label
                        text="From Date:"
                        class="sapUiSmallMarginEnd"
                    />
                    <m:DatePicker
                        id="fromDate"
                        width="130px"
                        placeholder="dd/mm/yyyy"
                        displayFormat="dd/MM/yyyy"
                        valueFormat="yyyy-MM-dd"
                    />

                    <m:Label
                        text="To Date:"
                        class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
                    />
                    <m:DatePicker
                        id="toDate"
                        width="130px"
                        placeholder="dd/mm/yyyy"
                        displayFormat="dd/MM/yyyy"
                        valueFormat="yyyy-MM-dd"
                    />

                    <m:Button
                        text="Go..."
                        press=".onFilterGo"
                        type="Emphasized"
                        class="sapUiSmallMarginBegin"
                    />
                    <m:Button
                        text="Reset"
                        press=".onFilterReset"
                        type="Reject"
                        class="sapUiSmallMarginBegin sapUiSmallMarginEnd"
                    />
                </m:HBox>
            </m:HBox>

            <m:IconTabBar
                id="cardsRow"
                select=".onIconTabSelect"
                class="sapUiResponsiveContentPadding sapUiSmallMarginButtom"
                visible="false"
                headerMode="Standard"
            >
                <m:items>
                    <m:IconTabFilter
                        key="summary"
                        icon="sap-icon://business-objects-experience"
                        text="Summary"
                    />

                    <m:IconTabFilter
                        key="track"
                        icon="sap-icon://begin"
                        iconColor="Positive"
                        text="Track Wise"
                    />

                    <m:IconTabFilter
                        key="audit"
                        icon="sap-icon://inspect"
                        iconColor="Critical"
                        text="Audit Trail"
                    />

                    <m:IconTabFilter
                        key="activity"
                        icon="sap-icon://activity-items"
                        iconColor="Neutral"
                        text="Activity"
                    />
                </m:items>
            </m:IconTabBar>

            <m:VBox
                id="summaryFilterBar"
                class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiContentPadding sapUiMediumMarginBegin"
                visible="false"
            >
                <!-- ðŸ”¹ Default filters row + Buttons -->
                <m:HBox
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                    class="sapUiTinyMarginBottom"
                >
                    <m:HBox
                        alignItems="Center"
                        justifyContent="Start"
                    >
                        <m:Label
                            text="BatchNo:"
                            class="sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="filterBatchNo"
                            width="150px"
                            liveChange=".onSummaryFilter"
                        />

                        <m:Label
                            text="Component:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="filterComponent"
                            width="150px"
                            liveChange=".onSummaryFilter"
                        />

                        <m:Label
                            text="Site:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="filterSite"
                            width="150px"
                            liveChange=".onSummaryFilter"
                        />
                    </m:HBox>

                    <!-- ðŸ”¹ Buttons fixed on right -->
                    <m:HBox
                        alignItems="Center"
                        justifyContent="End"
                    >
                        <m:Button
                            text="Add Filter"
                            icon="sap-icon://add-filter"
                            press=".onAddFilterPress"
                            class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
                        />
                        <m:Button
                            text="Reset"
                            type="Reject"
                            press=".onSummaryFilterReset"
                            class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
                        />
                    </m:HBox>
                </m:HBox>

                <!-- ðŸ”¹ Dynamic filters rows (added by controller) -->
                <m:VBox id="filterRows" />
            </m:VBox>

            <!-- ðŸ”¹ Track Filters -->
            <m:VBox
                id="trackFilterBar"
                class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiContentPadding sapUiMediumMarginBegin"
                visible="false"
            >
                <!-- ðŸ”¹ Default filters row + Buttons -->
                <m:HBox
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                    class="sapUiTinyMarginBottom"
                >
                    <!-- ðŸ”¹ Default Filters (left aligned) -->
                    <m:HBox
                        alignItems="Center"
                        justifyContent="Start"
                    >
                        <m:Label
                            text="Component:"
                            class="sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="trackComponent"
                            width="150px"
                            liveChange=".onTrackFilter"
                        />

                        <m:Label
                            text="BatchFirst:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="trackBatchFirst"
                            width="150px"
                            liveChange=".onTrackFilter"
                        />

                        <m:Label
                            text="DateFirst:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:DatePicker
                            id="trackDateFirst"
                            width="150px"
                            valueFormat="yyyy-MM-dd"
                            displayFormat="dd/MM/yyyy"
                            change=".onTrackFilter"
                        />

                        <m:Label
                            text="BatchRelease:"
                            class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                        />
                        <m:Input
                            id="trackBatchRelease"
                            width="150px"
                            liveChange=".onTrackFilter"
                        />
                    </m:HBox>

                    <!-- ðŸ”¹ Buttons fixed on right -->
                    <m:HBox
                        alignItems="Center"
                        justifyContent="End"
                    >
                        <m:Button
                            text="Add Filter"
                            icon="sap-icon://add-filter"
                            press=".onTrackAddFilter"
                            class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
                        />
                        <m:Button
                            text="Reset"
                            type="Reject"
                            press=".onTrackFilterReset"
                            class="sapUiTinyMarginBegin sapUiSmallMarginEnd"
                        />
                    </m:HBox>
                </m:HBox>

                <!-- ðŸ”¹ Dynamic filters rows -->
                <m:VBox id="trackFilterRows" />
            </m:VBox>

            <!-- ðŸ”¹ Audit Filters -->
            <m:HBox
                id="auditFilterBar"
                class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiContentPadding sapUiMediumMarginBegin"
                visible="false"
                alignItems="Center"
                justifyContent="Start"
            >
                <m:Label
                    text="User:"
                    class="sapUiTinyMarginEnd"
                />
                <m:Input
                    id="auditUser"
                    width="150px"
                    liveChange=".onAuditFilter"
                />

                <m:Label
                    text="Action:"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                />
                <m:Input
                    id="auditAction"
                    width="150px"
                    liveChange=".onAuditFilter"
                />

                <m:Label
                    text="Date:"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                />
                <m:DatePicker
                    id="auditDate"
                    width="150px"
                    valueFormat="yyyy-MM-dd"
                    displayFormat="dd/MM/yyyy"
                    change=".onAuditFilter"
                />

                <m:Label
                    text="Site:"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                />
                <m:Input
                    id="auditSite"
                    width="150px"
                    liveChange=".onAuditFilter"
                />

                <m:Button
                    text="Reset"
                    type="Reject"
                    class="sapUiTinyMarginBegin"
                    press=".onAuditFilterReset"
                />
            </m:HBox>

            <!-- ðŸ”¹ Activity Filters -->
            <m:HBox
                id="activityFilterBar"
                class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiContentPadding sapUiMediumMarginBegin"
                visible="false"
                alignItems="Center"
                justifyContent="Start"
            >
                <m:Label
                    text="Site:"
                    class="sapUiTinyMarginEnd"
                />
                <m:Input
                    id="activitySite"
                    width="150px"
                    liveChange=".onActivityFilter"
                />

                <m:Label
                    text="Detail:"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                />
                <m:Input
                    id="activityDetail"
                    width="150px"
                    liveChange=".onActivityFilter"
                />

                <m:Label
                    text="CreatedBy:"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                />
                <m:Input
                    id="activityCreatedBy"
                    width="150px"
                    liveChange=".onActivityFilter"
                />

                <m:Label
                    text="CreatedDate:"
                    class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
                />
                <m:DatePicker
                    id="activityCreatedDate"
                    width="150px"
                    valueFormat="yyyy-MM-dd"
                    displayFormat="dd/MM/yyyy"
                    change=".onActivityFilter"
                />

                <m:Button
                    text="Reset"
                    type="Reject"
                    class="sapUiTinyMarginBegin"
                    press=".onActivityFilterReset"
                />
            </m:HBox>

            <!-- ðŸ”¹ Table Container (hidden initially) -->
            <m:VBox
                id="tableContainer"
                class="sapUiSmallMarginTop sapUiSmallMarginButtom"
            />

            <!-- ðŸ”¹ Download Button Row (hidden initially) -->
            <m:HBox
                id="downloadRow"
                justifyContent="End"
                class="sapUiSmallMarginTop sapUiLargeMarginEnd"
            >
                <!-- <m:Button text="Download" press=".onDownloadPress" type="Ghost"/> -->
            </m:HBox>
        </m:content>
    </m:Page>
</mvc:View>
